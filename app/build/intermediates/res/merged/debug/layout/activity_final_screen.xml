<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_final_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.apo.quizfinal.FinalScreen">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreview"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/scrollview"
        android:maxLines = "10"
        android:scrollbars = "vertical"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/prevscore"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prevscore"
        android:textColor="@android:color/background_dark"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/scoreview"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:id="@+id/retrybtn" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/winner"

        android:layout_marginTop="37dp"
        android:id="@+id/prevscoreone"
        android:maxLines = "10"
        android:layout_above="@+id/retrybtn"
        android:layout_alignRight="@+id/scrollview"
        android:layout_alignEnd="@+id/scrollview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/prevscoreone"
        android:id="@+id/prevscoretwo"
        android:maxLines = "10"
        android:layout_above="@+id/retrybtn"
        android:layout_toRightOf="@+id/prevscoreone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prev"
        android:layout_alignTop="@+id/scrollview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp" />

    <TextView
        android:text="winnerfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winner"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_above="@+id/scrollview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
